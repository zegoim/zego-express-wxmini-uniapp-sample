textarea {
  width: auto;
}
live-pusher, live-player {
  width: 45%;
  height: 400rpx;
  margin: 4rpx;
}
button {
  display: inline-block;
  font-size: 28rpx;
  margin: 10rpx;
  padding: 10rpx;
  color: #fff;
  border: none;
  min-width: 120rpx;
  background-color: rgba(13, 112, 255, 0.7);
}
